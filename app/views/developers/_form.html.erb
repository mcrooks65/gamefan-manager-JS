<%= form_for @developer do |f| %>
  <% if @developer.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@developer.errors.count, "error") %> prohibited this Developer from being saved:
      </h2>

      <ul>
        <% @developer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="form-group">
    <%= f.label :name %>
    <br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :employees, "How many employees?" %>
    <br>
    <%= f.number_field :employees, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :location, "Location" %>
    <br>
    <%= f.text_field :location, class: "form-control" %>
  </div>

  <%= f.label :password %>
  <br>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <br>
  <%= f.password_field :password_confirmation %>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>
